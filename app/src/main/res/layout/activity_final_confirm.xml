<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mad.utsstudcentre.Controller.FinalConfirmActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Please Confirm Booking"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/refNumTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ref Number"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/final_conf_btn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:text="CONFIRM"
        android:textColor="@color/btn_centre_txt"
        android:background="@color/btn_centre_bg"
        android:textSize="30sp"/>+

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For staff use"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_margin="20dp"/>

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/help_layout"
    tools:context="com.mad.utsstudcentre.Controller.HelpEnqFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:text="HELP" />

    <LinearLayout
        android:id="@+id/enq_help_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/enq_help_title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/general_enquiry"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/enq_help_tv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_general"
            android:textSize="15sp" />

    </LinearLayout>



</LinearLayout>
